<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/copyMenuRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingTop="12dp"
    android:paddingEnd="12dp"
    android:paddingBottom="12dp">

    <View
        android:id="@+id/viewCopyMenuHandle"
        android:layout_width="30dp"
        android:layout_height="3dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_copy_menu_handle" />

    <TextView
        android:id="@+id/tvCopyMenuTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:text="选择内容"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCopyMenuSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif"
        android:text="点击即可选择"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/btnCopyQuestionAndAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_model_menu_item"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="10dp"
        android:paddingTop="9dp"
        android:paddingEnd="10dp"
        android:paddingBottom="9dp"
        android:text="题与解"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/btnCopyAnswerOnly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@drawable/bg_model_menu_item"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="10dp"
        android:paddingTop="9dp"
        android:paddingEnd="10dp"
        android:paddingBottom="9dp"
        android:text="仅解答"
        android:textSize="12sp" />

</LinearLayout>
