<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/modelCatalogOptionRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_model_option_unselected"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="12dp"
    android:paddingTop="10dp"
    android:paddingEnd="12dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvModelCatalogName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="monospace"
            android:maxLines="2"
            android:text="gpt-4o-mini"
            android:textColor="#1D2A2F"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvModelCatalogMeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="推理 · 视觉"
            android:textColor="#62707B"
            android:textSize="11sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivModelCatalogCheck"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_check"
        android:visibility="gone" />

</LinearLayout>
