<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/modelDialogRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_model_dialog_surface"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/modelDialogHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_model_dialog_header"
        android:paddingStart="18dp"
        android:paddingTop="16dp"
        android:paddingEnd="18dp"
        android:paddingBottom="14dp">

        <TextView
            android:id="@+id/tvModelDialogEyebrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.08"
            android:text="MODEL ROUTER"
            android:textColor="#EAF7F3"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvModelDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-medium"
            android:text="切换解题模型"
            android:textColor="#FFFFFF"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvModelDialogSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-light"
            android:lineSpacingMultiplier="1.2"
            android:text="选择后立即生效，后续重试将使用新模型。"
            android:textColor="#E8FFF8"
            android:textSize="13sp" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/modelOptionScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:id="@+id/modelOptionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="14dp"
            android:paddingTop="12dp"
            android:paddingEnd="14dp"
            android:paddingBottom="4dp" />

    </ScrollView>

    <LinearLayout
        android:id="@+id/modelDialogFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="14dp"
        android:paddingTop="6dp"
        android:paddingEnd="14dp"
        android:paddingBottom="14dp">

        <TextView
            android:id="@+id/tvModelDialogTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="建议：流式输出期间切换模型后，点击“重试”可立即验证效果。"
            android:textColor="#5E646A"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/btnCloseModelDialog"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_model_dialog_close_button"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="关闭"
            android:textColor="#1E7C64"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
