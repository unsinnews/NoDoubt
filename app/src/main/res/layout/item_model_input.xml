<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/modelRowRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@drawable/bg_model_option_unselected"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="10dp"
    android:paddingTop="9dp"
    android:paddingEnd="8dp"
    android:paddingBottom="9dp">

    <ImageView
        android:id="@+id/ivDragHandle"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="Drag to reorder"
        android:src="@drawable/ic_drag_handle" />

    <TextView
        android:id="@+id/tvModelId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:fontFamily="monospace"
        android:maxLines="2"
        android:text="gpt-4o-mini"
        android:textColor="#202123"
        android:textSize="13sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/btnRemoveModel"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_button_outline"
        android:contentDescription="Remove model"
        android:padding="7dp"
        android:src="@drawable/ic_delete" />

</LinearLayout>
