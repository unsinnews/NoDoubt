<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/etModelId"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/bg_edittext_settings"
        android:fontFamily="monospace"
        android:hint="gpt-4o-mini"
        android:inputType="text"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/btnRemoveModel"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_dialog_item_unselected"
        android:contentDescription="Remove model"
        android:padding="8dp"
        android:src="@drawable/ic_delete" />

</LinearLayout>
