<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogResultRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/bg_connection_dialog_surface"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingTop="18dp"
    android:paddingEnd="20dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/tvPlanBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/bg_connection_plan_chip"
        android:paddingStart="10dp"
        android:paddingTop="4dp"
        android:paddingEnd="10dp"
        android:paddingBottom="4dp"
        android:text="PREMIUM · $20/mo"
        android:textColor="#10A37F"
        android:textSize="11sp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/iconStage"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_marginTop="2dp">

        <View
            android:id="@+id/vAmbientGlow"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_connection_ambient_glow_success" />

        <View
            android:id="@+id/vRingOuter"
            android:layout_width="122dp"
            android:layout_height="122dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_connection_ring_success" />

        <View
            android:id="@+id/vRingInner"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_connection_ring_success" />

        <FrameLayout
            android:id="@+id/statusOrb"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_connection_orb_success">

            <ImageView
                android:id="@+id/ivStatusIcon"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_check"
                android:tint="#FFFFFF" />

        </FrameLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/tvResultTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-4dp"
        android:text="连接成功"
        android:textColor="#10A37F"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvResultMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="#5F6872"
        android:textSize="13sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/btnResultConfirm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/bg_connection_action_button"
        android:gravity="center"
        android:text="确定"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>
