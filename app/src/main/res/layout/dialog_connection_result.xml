<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogResultRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/bg_connection_dialog_surface"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingStart="22dp"
    android:paddingTop="20dp"
    android:paddingEnd="22dp"
    android:paddingBottom="22dp">

    <FrameLayout
        android:id="@+id/iconStage"
        android:layout_width="match_parent"
        android:layout_height="128dp">

        <View
            android:id="@+id/vAmbientGlow"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_connection_ambient_glow_success" />

        <View
            android:id="@+id/vRingOuter"
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_connection_ring_success" />

        <View
            android:id="@+id/vRingInner"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_connection_ring_success" />

        <FrameLayout
            android:id="@+id/statusOrb"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_connection_orb_success">

            <ImageView
                android:id="@+id/ivStatusIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_check"
                android:tint="#FFFFFF" />

        </FrameLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/tvResultTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="连接成功"
        android:textColor="#10A37F"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvResultMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#5F6872"
        android:textSize="13sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/btnResultConfirm"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_connection_action_button"
        android:gravity="center"
        android:text="确定"
        android:textColor="#10A37F"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>
